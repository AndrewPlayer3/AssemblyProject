# Collatz Function

mov r10, Enter an Integer:\0
pln r10
ini r0
mov r11, \0
mov r1, 1

parity_test:
    out r0
    pln r11
    cmp r0, r1
    je finish
    mov r6, r0
    mov r7, 0
    mod r6, 2
    cmp r6, r7
    jg odd
    jmp even

even:
    div r0, 2
    jmp parity_test

odd:
    mul r0, 3
    add r0, 1
    jmp parity_test


finish:
    #we done now boys
    rdp 0
    mdp 0,100
