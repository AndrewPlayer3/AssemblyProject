question:
    mov r0, Push(0) or Pop(1)?\0
    pln r0
    ini r0
    mov r1, 0
    cmp r0, r1
    je do_push
    jg do_pop
    jl do_loop

do_push:
    mov r0, Enter a number to push:\0
    pln r0
    ini r0
    psh r0
    jmp question

do_pop:
    pop r4
    mov r0, Popped \0
    put r0
    out r4
    mov r0, ' into R4.\0
    pln r0
    jmp question

do_loop:
    mov r0, 69
    psh r0
    jmp do_loop

